<div class="row">
    <div class="col">
        <nav style="--bs-breadcrumb-divider: '';" aria-label="breadcrumb" dir="rtl">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><%= link_to 'الادمن', admin_team_path %></li>
                <span class="text-muted mx-1"> / </span> 
                <li class="breadcrumb-item active fw-bold" aria-current="page"> اداره الادارات و الادوار </li>
            </ol>
        </nav>
        

        <%= link_to departments_path, class: 'btn btn-outline-success' do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-building" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M14.763.075A.5.5 0 0 1 15 .5v15a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5V14h-1v1.5a.5.5 0 0 1-.5.5h-9a.5.5 0 0 1-.5-.5V10a.5.5 0 0 1 .342-.474L6 7.64V4.5a.5.5 0 0 1 .276-.447l8-4a.5.5 0 0 1 .487.022zM6 8.694 1 10.36V15h5V8.694zM7 15h2v-1.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 .5.5V15h2V1.309l-7 3.5V15z"/>
                <path d="M2 11h1v1H2v-1zm2 0h1v1H4v-1zm-2 2h1v1H2v-1zm2 0h1v1H4v-1zm4-4h1v1H8V9zm2 0h1v1h-1V9zm-2 2h1v1H8v-1zm2 0h1v1h-1v-1zm2-2h1v1h-1V9zm0 2h1v1h-1v-1zM8 7h1v1H8V7zm2 0h1v1h-1V7zm2 0h1v1h-1V7zM8 5h1v1H8V5zm2 0h1v1h-1V5zm2 0h1v1h-1V5zm0-2h1v1h-1V3z"/>
            </svg>
            الادارات
        <% end %>

        <%= button_tag class: 'btn btn-success fw-bold' do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-shield-fill-check" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M8 0c-.69 0-1.843.265-2.928.56-1.11.3-2.229.655-2.887.87a1.54 1.54 0 0 0-1.044 1.262c-.596 4.477.787 7.795 2.465 9.99a11.777 11.777 0 0 0 2.517 2.453c.386.273.744.482 1.048.625.28.132.581.24.829.24s.548-.108.829-.24a7.159 7.159 0 0 0 1.048-.625 11.775 11.775 0 0 0 2.517-2.453c1.678-2.195 3.061-5.513 2.465-9.99a1.541 1.541 0 0 0-1.044-1.263 62.467 62.467 0 0 0-2.887-.87C9.843.266 8.69 0 8 0zm2.146 5.146a.5.5 0 0 1 .708.708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 7.793l2.646-2.647z"/>
            </svg>
            الادوار
        <% end %>

        <div class="bg-light p-2 br-10 mt-2">
            <%= link_to new_role_path, class: 'btn btn-outline-primary mb-1' do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle-fill" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8.5 4.5a.5.5 0 0 0-1 0v3h-3a.5.5 0 0 0 0 1h3v3a.5.5 0 0 0 1 0v-3h3a.5.5 0 0 0 0-1h-3v-3z"/>
                </svg>
                اضافه دور جديد
            <% end %>

            <% if @roles.any? %>
                <p class="fw-bold">
                    يوجد عدد
                    <%= Role.count %>
                    دور حتي الان.
                </p>

                <table class="table table-bordered table-sm table-hover">
                    <thead>
                        <th> الدور </th>
                        <th> الكود </th>
                    </thead>

                    <tbody>
                        <% @roles.each do |role| %>
                            <tr>
                                <td class="fw-bold"> <%= role.name %> </td>
                                <td class="fw-bold"> <%= role.code %> </td>
                                <td> <%= link_to 'تعديل', edit_role_path(role), class: 'fw-bold' %> </td>
                                <td> <%= link_to 'حذف', confirm_role_delete_path(role), class: 'fw-bold text-danger' %> </td>

                            </tr>
                        <% end %>
                    </tbody>
                </table>

            <% else %>
                
                <p class="fw-bold text-muted">
                    لا يوجد ادوار بعد.
                </p>

            <% end %>
        </div>
    </div>
</div>